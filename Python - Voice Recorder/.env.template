# Environment Configuration Template for Voice Recorder Pro
# Copy this file to .env and fill in your actual values
# NEVER commit .env files to the repository!

# ============================================================================
# APPLICATION SETTINGS
# ============================================================================
APP_NAME=Voice Recorder Pro
APP_VERSION=2.0.0-beta
APP_DEBUG=false
APP_ENVIRONMENT=development

# ============================================================================
# GOOGLE CLOUD SETTINGS (Required for Cloud Features)
# ============================================================================

# Google OAuth Client Configuration
# Get these from Google Cloud Console > APIs & Credentials
GOOGLE_CLIENT_ID=your_client_id_here.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your_client_secret_here
GOOGLE_PROJECT_ID=your_project_id_here

# OAuth Redirect URI (for desktop app, usually localhost)
GOOGLE_REDIRECT_URI=http://localhost:8080

# Google Drive API Settings
GOOGLE_DRIVE_SCOPES=https://www.googleapis.com/auth/drive.file

# ============================================================================
# DATABASE SETTINGS
# ============================================================================
DATABASE_URL=sqlite:///db/app.db
DATABASE_BACKUP_ENABLED=true
DATABASE_BACKUP_INTERVAL=daily

# ============================================================================
# AUDIO SETTINGS
# ============================================================================
AUDIO_SAMPLE_RATE=44100
AUDIO_CHANNELS=2
AUDIO_FORMAT=wav
AUDIO_QUALITY=high

# Recording paths (relative to project root)
RECORDINGS_RAW_PATH=recordings/raw
RECORDINGS_EDITED_PATH=recordings/edited
RECORDINGS_MAX_SIZE_MB=100

# ============================================================================
# SECURITY SETTINGS
# ============================================================================

# Enable/disable features
CLOUD_FEATURES_ENABLED=true
TELEMETRY_ENABLED=false
CRASH_REPORTING_ENABLED=false

# Local storage encryption (future feature)
LOCAL_ENCRYPTION_ENABLED=false
LOCAL_ENCRYPTION_KEY=

# ============================================================================
# DEVELOPMENT SETTINGS
# ============================================================================

# Logging levels: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO
LOG_TO_FILE=true
LOG_FILE_PATH=logs/app.log

# Performance monitoring
PERFORMANCE_MONITORING=false
PERFORMANCE_LOG_PATH=logs/performance.log

# ============================================================================
# BUILD SETTINGS
# ============================================================================

# PyInstaller settings
BUILD_ONEFILE=false
BUILD_WINDOWED=true
BUILD_OPTIMIZE=true
BUILD_INCLUDE_DEBUG=false
